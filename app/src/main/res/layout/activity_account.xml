<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:themeBackground="#000">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:blackThemeLeftSrc="@drawable/image_toolbar_back_gray"
        app:defaultTheme="Light"
        app:toolbarBottomWidth="1dp"
        app:toolbarTitle="Account"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_back_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/group_account_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Nickname"
                android:textColor="#000"
                android:textSize="14dp" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/image_account_nickname_arrow"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:src="@drawable/image_arrow_right_blue"
                app:themeSrc="@drawable/image_arrow_right_gray" />


            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_account_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_account_nickname_arrow"
                android:gravity="center"
                android:text="choi3950"
                android:textColor="#AAAAAA"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_account_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="E-mail"
                android:textColor="#000"
                android:textSize="14dp" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/image_account_email_arrow"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:src="@drawable/image_arrow_right_blue"
                app:themeSrc="@drawable/image_arrow_right_gray" />

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_account_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_account_email_arrow"
                android:gravity="center"
                android:text="foodover12345@grabity.org"
                android:textColor="#AAAAAA"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_account_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Phone Number"
                android:textColor="#000"
                android:textSize="14dp" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/image_account_phone_number_arrow"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:src="@drawable/image_arrow_right_blue"
                app:themeSrc="@drawable/image_arrow_right_gray" />

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_account_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_account_phone_number_arrow"
                android:gravity="center"
                android:text="+82 10-1234-5678"
                android:textColor="#AAAAAA"
                android:textSize="14dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/group_account_connect_manager"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Connect Manager"
                android:textColor="#000"
                android:textSize="14dp" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/image_account_connect_manager_arrow"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:padding="18dp"
                android:src="@drawable/image_arrow_right_blue"
                app:themeSrc="@drawable/image_arrow_right_gray" />

            <io.grabity.planetwallet.Widgets.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/image_account_connect_manager_arrow"
                android:gravity="center"
                android:text=""
                android:textColor="#AAAAAA"
                android:textSize="14dp" />

        </RelativeLayout>

    </LinearLayout>


</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>