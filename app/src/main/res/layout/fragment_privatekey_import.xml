<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp">

        <io.grabity.planetwallet.Widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/privatekey_import_enter_privateKey_title"
            android:textColor="#5C5964"
            android:textSize="14dp"
            app:themeTextColor="#aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <io.grabity.planetwallet.Widgets.RoundEditText
                android:textCursorDrawable="@null"
                android:id="@+id/et_privatekey_import_privatekey"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:paddingStart="14dp"
                android:paddingEnd="54dp"
                app:defaultTheme="Dark" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/btn_privatekey_import_password_invisible"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/et_privatekey_import_privatekey"
                android:layout_alignEnd="@id/et_privatekey_import_privatekey"
                android:layout_alignBottom="@id/et_privatekey_import_privatekey"
                android:layout_marginEnd="6dp"
                android:src="@drawable/image_input_invisible_darkgray"
                app:themeSrc="@drawable/image_input_invisible_gray" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/btn_privatekey_import_password_visible"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/et_privatekey_import_privatekey"
                android:layout_alignEnd="@id/et_privatekey_import_privatekey"
                android:layout_alignBottom="@id/et_privatekey_import_privatekey"
                android:layout_marginEnd="6dp"
                android:src="@drawable/image_input_visible"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


    <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/privatekey_import_btn_title"
        android:textSize="18dp"
        app:buttonType="A"
        app:defaultTheme="Dark" />


</RelativeLayout>