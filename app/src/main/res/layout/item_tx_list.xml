<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <io.grabity.planetwallet.Widgets.StretchImageView
            android:id="@+id/image_item_tx_list_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true" />

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_item_tx_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_toRightOf="@id/image_item_tx_list_icon"
            android:layout_centerVertical="true"
            android:textColor="#FFF"
            android:paddingStart="10dp"
            android:includeFontPadding="false"
            app:themeTextColor="#000"
            app:typefaceStyle="medium" />

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_item_tx_list_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5c5964"
            android:textSize="16dp"
            app:themeTextColor="#aaaaaa"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:paddingStart="6dp" />

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_item_tx_list_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/text_item_tx_list_symbol"
            android:layout_toRightOf="@id/text_item_tx_list_status"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="20dp"
            android:textColor="#FFF"
            android:textSize="16dp"
            app:themeTextColor="#000"
            app:typefaceStyle="medium" />

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_item_tx_list_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5c5964"
            app:themeTextColor="#aaaaaa"
            android:layout_below="@id/text_item_tx_list_balance"
            android:layout_alignParentRight="true"
            android:textSize="14dp" />

    </RelativeLayout>

</RelativeLayout>