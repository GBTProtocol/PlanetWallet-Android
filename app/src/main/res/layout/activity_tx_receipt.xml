<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    app:themeBackground="#FFF">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:blackThemeLeftSrc="@drawable/image_toolbar_close_gray"
        app:defaultTheme="Dark"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_close_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:layout_above="@id/group_tx_receipt_btn_group">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="40dp"
            android:paddingEnd="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84dp">

                <RelativeLayout
                    android:id="@+id/group_tx_receipt_planet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="82dp"
                    android:paddingTop="10dp"
                    android:visibility="visible">

                    <io.grabity.planetwallet.Widgets.PlanetView
                        android:id="@+id/planet_tx_receipt_planetview"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_planet_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/planet_tx_receipt_planetview"
                        android:paddingStart="20dp"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:themeTextColor="#000"
                        app:typefaceStyle="semibold" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_planet_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_tx_receipt_planet_name"
                        android:layout_toRightOf="@id/planet_tx_receipt_planetview"
                        android:paddingStart="20dp"
                        android:textColor="#5C5964"
                        android:textSize="14dp"
                        app:themeTextColor="#aaaaaa" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/group_tx_receipt_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <io.grabity.planetwallet.Widgets.CircleImageView
                        android:id="@+id/image_tx_receipt_coin_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="#1E1E28"
                        app:borderColor="#1E1E28"
                        app:borderWidth="1dp"
                        app:themeSrc="#F9F9F9" />


                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image_tx_receipt_coin_icon"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="20dp"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        app:themeTextColor="#000"
                        app:typefaceStyle="semibold" />

                </RelativeLayout>

            </RelativeLayout>

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_tx_receipt_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="84dp"
                android:paddingBottom="30dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#FFF"
                android:textSize="28dp"
                app:themeTextColor="#000"
                app:typefaceStyle="semibold" />

            <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_tx_receipt_amount"
                android:background="#1E1E28"
                app:themeBackground="#EDEDED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/view"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listHeight">

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_from_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tx_receipt_from_title"
                        android:textColor="#5c5964"
                        android:textSize="14dp"
                        app:themeTextColor="#aaaaaa" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_from_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text_tx_receipt_from_title"
                        android:maxLines="1"
                        android:paddingStart="20dp"
                        android:gravity="end"
                        android:ellipsize="end"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        app:themeTextColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listHeight">

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tx_receipt_amount"
                        android:textColor="#5c5964"
                        android:textSize="14dp"
                        app:themeTextColor="#aaaaaa" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_amount_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text_tx_receipt_amount_title"
                        android:paddingStart="20dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:textColor="#FF0050"
                        android:textSize="16dp"
                        app:themeTextColor="#FF0050" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listHeight">

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tx_receipt_fee_title"
                        android:textColor="#5c5964"
                        android:textSize="14dp"
                        app:themeTextColor="#aaaaaa" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        app:themeTextColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listHeight">

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tx_receipt_date_title"
                        android:textColor="#5c5964"
                        android:textSize="14dp"
                        app:themeTextColor="#aaaaaa" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        app:themeTextColor="#000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingTop="10dp">

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tx_receipt_tx_hash_title"
                        android:textColor="#5c5964"
                        android:textSize="14dp"
                        app:themeTextColor="#aaaaaa"
                        android:paddingEnd="54dp" />

                    <io.grabity.planetwallet.Widgets.FontTextView
                        android:id="@+id/text_tx_receipt_txhash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/views"
                        android:textColor="#FFF"
                        android:textSize="16dp"
                        app:themeTextColor="#000"
                        app:underLine="Line" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/group_tx_receipt_btn_group"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <io.grabity.planetwallet.Widgets.RoundRelativeLayout
            android:id="@+id/group_tx_receipt_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:borderColor="#FFF"
            app:borderWidth="1dp"
            app:cornerRadius="6dp">

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/image_tx_receipt_share_white"
                app:themeSrc="@drawable/image_tx_receipt_share_black" />

        </io.grabity.planetwallet.Widgets.RoundRelativeLayout>


        <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/tx_receipt_btn_title"
            android:textSize="18dp"
            app:buttonType="A"
            app:defaultTheme="Dark" />

    </LinearLayout>


</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>