<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/group_erc_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_alignParentBottom="true">

        <io.grabity.planetwallet.Widgets.ShadowView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:direction="BOTTOM_TOP" />

        <io.grabity.planetwallet.Widgets.RoundRelativeLayout
            android:id="@+id/group_erc_main_sub_bottom"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_marginTop="20dp"
            app:backgroundColor="#FFF"
            app:cornerRadius="20dp">

            <View
                android:id="@+id/btn_erc_main_bottom_btn_close"
                android:layout_width="match_parent"
                android:layout_height="28dp"/>

            <LinearLayout
                android:id="@+id/group_erc_main_bottom_name"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout
                    android:id="@+id/views"
                    android:layout_width="36dp"
                    android:layout_height="4dp"
                    android:background="#CCCCCC"
                    app:cornerRadius="6dp"
                    app:cornerRound="LB|RB|LT|RT"
                    app:themeBackground="#CCCCCC"
                    android:layout_gravity="center"/>

                <io.grabity.planetwallet.Widgets.FontTextView
                    android:id="@+id/text_erc_main_bottom_token_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GBT"
                    android:textColor="#000"
                    android:textSize="18dp"
                    app:typefaceStyle="bold"
                    android:layout_below="@id/views"
                    android:layout_gravity="center"
                    android:paddingTop="22dp"
                    android:gravity="bottom" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"
                android:layout_below="@id/group_erc_main_bottom_name"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:background="#FFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_erc_main_bottom_name"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <io.grabity.planetwallet.Widgets.BarcodeView
                    android:id="@+id/barcode_erc_main_bottom_barcodeview"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="12dp"
                    app:borderColor="#ededed"
                    app:borderWidth="1dp" />

                <io.grabity.planetwallet.Widgets.FontTextView
                    android:id="@+id/text_erc_main_bottom_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="PlanetName"
                    android:gravity="center"
                    android:paddingTop="40dp"
                    android:paddingBottom="10dp"
                    android:textColor="#1E1E28"
                    app:typefaceStyle="semibold"/>

                <io.grabity.planetwallet.Widgets.FontTextView
                    android:id="@+id/text_erc_main_bottom_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3Gvgi1WpEZ73CNmQviecrnyiWrnqRhjJm1"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="36dp">

                <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
                    android:id="@+id/btn_erc_main_bottom_copy"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/main_btn_bottom_copy_title"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:borderColorHighlight="#111117"
                    app:borderColorNormal="#000"
                    app:borderWidth="1dp"
                    app:cornerRadius="8dp"
                    app:textColorHighlight="#111117"
                    app:textColorNormal="#000" />

                <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
                    android:id="@+id/btn_erc_main_bottom_transfer"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/main_btn_bottom_transfer_title"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:backgroundColorHighlight="#111117"
                    app:backgroundColorNormal="#000"
                    app:borderColorHighlight="#000"
                    app:borderColorNormal="#000"
                    app:borderWidth="1dp"
                    app:cornerRadius="8dp"
                    app:textColorHighlight="#FFF"
                    app:textColorNormal="#FFF" />

            </LinearLayout>

        </io.grabity.planetwallet.Widgets.RoundRelativeLayout>


    </RelativeLayout>

</RelativeLayout>