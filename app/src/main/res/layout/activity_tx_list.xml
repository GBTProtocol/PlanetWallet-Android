<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    app:themeBackground="#FFF">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:blackThemeLeftSrc="@drawable/image_toolbar_back_gray"
        app:defaultTheme="Dark"
        app:toolbarBottomWidth="1dp"
        app:toolbarTitle="TxList"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_back_blue">
    </io.grabity.planetwallet.Widgets.ToolBar>


    <io.grabity.planetwallet.Widgets.PlanetView
        android:id="@+id/planet_tx_list_planetview"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_below="@id/toolBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>



    <io.grabity.planetwallet.Widgets.BarcodeView
        android:id="@+id/barcode_tx_list_barcodeView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

    <io.grabity.planetwallet.Widgets.FontTextView
        android:id="@+id/text_tx_list_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/planet_tx_list_planetview"
        android:layout_toRightOf="@id/planet_tx_list_planetview"
        android:textSize="14dp"
        android:textColor="#FFF"
        app:themeTextColor="#000"/>

    <io.grabity.planetwallet.Widgets.FontTextView
        android:id="@+id/text_tx_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tx_list_address"
        android:layout_toRightOf="@id/planet_tx_list_planetview"
        android:textSize="14dp"
        android:textColor="#FFF"
        app:themeTextColor="#000"/>

    <io.grabity.planetwallet.Widgets.StretchImageView
        android:id="@+id/image_tx_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/planet_tx_list_planetview"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <io.grabity.planetwallet.Widgets.FontTextView
        android:id="@+id/text_tx_list_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_tx_list_icon"
        android:layout_toRightOf="@id/image_tx_list_icon"
        android:textSize="14dp"
        android:textColor="#FFF"
        app:themeTextColor="#000"/>

    <LinearLayout
        android:id="@+id/group_tx_list_btn"
        android:layout_below="@id/image_tx_list_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
            android:id="@+id/btn_tx_list_qr_code"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="QR Code"
            android:textSize="18dp"
            android:visibility="visible"
            app:buttonType="C"
            app:defaultTheme="Dark" />

        <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
            android:id="@+id/btn_tx_list_transfer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Transfer"
            android:textSize="18dp"
            android:visibility="visible"
            app:buttonType="C"
            app:defaultTheme="Dark" />
    </LinearLayout>

    <io.grabity.planetwallet.Widgets.AdvanceRecyclerView.AdvanceRecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_tx_list_btn">

    </io.grabity.planetwallet.Widgets.AdvanceRecyclerView.AdvanceRecyclerView>



</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>