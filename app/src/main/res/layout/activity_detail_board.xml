<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:themeBackground="#000">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:blackThemeLeftSrc="@drawable/image_toolbar_back_gray"
        app:defaultTheme="Light"
        app:toolbarBottomWidth="1dp"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_back_blue" />


    <RelativeLayout
        android:id="@+id/group_detail_board"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/toolBar"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_detail_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:textColor="#000"
            android:textSize="14dp"
            app:themeTextColor="#FFF" />

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_detail_board_create_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/text_detail_board_title"
            android:layout_alignTop="@id/text_detail_board_title"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="14dp"
            android:visibility="gone"
            app:themeTextColor="#FFF" />

        <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWView
            android:id="@+id/pwview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#EDEDED"
            app:themeBackground="#1E1E28" />

    </RelativeLayout>


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_detail_board">

    </WebView>


</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>