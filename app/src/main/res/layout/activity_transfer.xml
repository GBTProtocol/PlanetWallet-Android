<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    app:themeBackground="#FFF">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:defaultTheme="Dark"
        app:blackThemeLeftSrc="@drawable/image_toolbar_back_gray"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_back_blue"
        app:blackThemeRightSrc="@drawable/image_toolbar_transfer_gray"
        app:whiteThemeRightSrc="@drawable/image_toolbar_transfer_blue"/>

    <RelativeLayout
        android:id="@+id/group_transfer_search"
        android:layout_below="@id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

    <EditText
        android:id="@+id/et_transfer_search"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#111117"
        android:hint="@string/search_title"
        android:singleLine="true"
        android:paddingStart="60dp"
        android:paddingEnd="80dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#5C5964"
        android:textSize="14dp"
        />

    <io.grabity.planetwallet.Widgets.StretchImageView
        android:id="@+id/image_transfer_nosearch_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="16dp"
        android:src="@drawable/image_search_darkgray" />

    <io.grabity.planetwallet.Widgets.StretchImageView
        android:id="@+id/image_transfer_search_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="16dp"
        android:src="@drawable/image_search_white"
        android:visibility="invisible"
        app:themeSrc="@drawable/image_search_black" />

    <io.grabity.planetwallet.Widgets.CircleImageView
        android:id="@+id/btn_transfer_clear"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:padding="14dp"
        android:src="@drawable/image_input_clear_blue"
        android:visibility="gone"
        app:themeSrc="@drawable/image_input_clear_black" />

    <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1E1E28"
        app:themeBackground="#EDEDED" />

    <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1E1E28"
        app:themeBackground="#EDEDED" />

</RelativeLayout>

    <io.grabity.planetwallet.Widgets.AdvanceRecyclerView.AdvanceRecyclerView
        android:id="@+id/listView"
        android:layout_below="@id/group_transfer_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <io.grabity.planetwallet.Widgets.UnderlineTextView
        android:id="@+id/btn_transfer_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#FF0050"
        android:text="@string/transfer_clip_board_title"
        android:layout_below="@id/group_transfer_search"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        app:underlineWidth="1dp"
        app:underlineColor="#FF0050"
        android:visibility="gone"/>

    <io.grabity.planetwallet.Widgets.FontTextView
        android:id="@+id/text_transfer_noitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_transfer_search"
        android:text="You can transfer to\n the Planet name and Wallet address."
        android:textSize="14dp"
        android:textColor="#5C5964"
        android:gravity="center_horizontal"
        android:paddingTop="116dp"
        android:visibility="gone"
        app:themeTextColor="#AAAAAA" />

    <RelativeLayout
        android:id="@+id/group_transfer_address_search"
        android:layout_below="@id/group_transfer_search"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:paddingStart="20dp"
        android:paddingEnd="18dp"
        android:visibility="gone">

        <io.grabity.planetwallet.Widgets.CircleImageView
            android:id="@+id/image_transfer_address_search_background"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="#1E1E28"
            app:themeSrc="#F9F9F9"
            app:borderWidth="1dp"
            app:borderColor="#1E1E28"
            android:layout_centerVertical="true"/>

        <io.grabity.planetwallet.Widgets.StretchImageView
            android:id="@+id/image_transfer_address_search_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_transfer_eth_black"/>

        <io.grabity.planetwallet.Widgets.StretchImageView
            android:id="@+id/image_transfer_address_search_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/image_arrow_right_gray"
            app:themeSrc="@drawable/image_arrow_right_blue"
            />

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_transfer_address_search_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/image_transfer_address_search_icon"
            android:layout_alignBottom="@id/image_transfer_address_search_icon"
            android:layout_toRightOf="@id/image_transfer_address_search_icon"
            android:layout_toLeftOf="@id/image_transfer_address_search_arrow"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text=""
            android:textSize="16dp"
            android:textColor="#FFF"
            android:lineSpacingExtra="4dp"
            app:typefaceStyle="medium"
            app:themeTextColor="#000"/>

    </RelativeLayout>



</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>