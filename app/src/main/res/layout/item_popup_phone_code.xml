<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    app:themeBackground="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/listHeight">

        <TextView
            android:id="@+id/text_item_popup_phone_code_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korea"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:paddingStart="20dp"
            />

        <TextView
            android:id="@+id/text_item_popup_phone_code_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="+ 82"
            android:textColor="#AAAAAA"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingEnd="20dp"
            />

    </RelativeLayout>


</io.grabity.planetwallet.Widgets.PWRelativeLayout>