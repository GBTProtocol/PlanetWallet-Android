<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    app:themeBackground="#000"
    >

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:toolbarTitle="Planet"
        app:toolbarTitleColor="#000"
        app:toolbarBottomWidth="1dp"
        app:toolbarBottomColor="#EDEDED" />

    <io.grabity.planetwallet.Widgets.AdavanceRecyclerView.AdvanceRecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:paddingTop="22dp">
    </io.grabity.planetwallet.Widgets.AdavanceRecyclerView.AdvanceRecyclerView>

</io.grabity.planetwallet.Widgets.PWRelativeLayout>