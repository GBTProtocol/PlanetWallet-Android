<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:themeBackground="#000">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:blackThemeLeftSrc="@drawable/image_toolbar_close_gray"
        app:defaultTheme="Light"
        app:toolbarBottomWidth="1dp"
        app:toolbarTitle="@string/rename_planet_toolbar_title"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_close_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp">

        <io.grabity.planetwallet.Widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolBar"
            android:paddingBottom="10dp"
            android:text="@string/rename_planet_enter_planet_name_title"
            android:textColor="#AAAAAA"
            android:textSize="14dp"
            app:themeTextColor="#5c5964" />

        <RelativeLayout
            android:id="@+id/group_renamePlanet_name"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <io.grabity.planetwallet.Widgets.RoundEditText
                android:id="@+id/et_rename_planet_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/rename_planet_name_title"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="14dp"
                app:defaultTheme="Light" />

            <io.grabity.planetwallet.Widgets.CircleImageView
                android:id="@+id/btn_rename_planet_clear"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:src="@drawable/image_input_clear_black"
                android:visibility="gone"
                app:themeSrc="@drawable/image_input_clear_blue" />
        </RelativeLayout>

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_renamePlanet_name"
            android:paddingTop="10dp"
            android:textColor="#FF0050"
            android:textSize="14dp" />

    </LinearLayout>

    <io.grabity.planetwallet.Widgets.RoundButton.RoundButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/rename_planet_btn_title"
        android:textSize="18dp"
        app:buttonType="A"
        app:defaultTheme="Light" />


</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>