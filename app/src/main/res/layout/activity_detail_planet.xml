<?xml version="1.0" encoding="utf-8"?>
<io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:themeBackground="#000">

    <io.grabity.planetwallet.Widgets.ToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        app:blackThemeLeftSrc="@drawable/image_toolbar_back_gray"
        app:defaultTheme="Light"
        app:toolbarBottomWidth="1dp"
        app:whiteThemeLeftSrc="@drawable/image_toolbar_back_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <io.grabity.planetwallet.Widgets.FontTextView
            android:id="@+id/text_detail_planet_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:textColor="#aaaaaa"
            android:textSize="16dp"
            app:themeTextColor="#5c5964" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_detail_planet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="6dp"
                android:textColor="#000"
                android:textSize="24dp"
                app:themeTextColor="#FFF"
                app:typefaceStyle="medium" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:id="@+id/btn_detail_planet_name_change"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/text_detail_planet_name"
                android:layout_alignBottom="@id/text_detail_planet_name"
                android:layout_toEndOf="@id/text_detail_planet_name"
                android:padding="2dp"
                android:src="@drawable/image_detail_planet_edit_blue"
                app:themeSrc="@drawable/image_detail_planet_edit_black" />


            <io.grabity.planetwallet.Widgets.PlanetView
                android:id="@+id/planet_detail_planet_planetview"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@id/text_detail_planet_name"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:paddingTop="16dp">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_detail_planet_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="26dp"
                android:textColor="#000"
                android:textSize="14dp"
                app:themeTextColor="#FFF" />


            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_detail_planet_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listHeight"
                android:layout_toRightOf="@id/text_detail_planet_address_type"
                android:textColor="#aaaaaa"
                android:textSize="16dp"
                app:themeTextColor="#5c5964" />

        </RelativeLayout>

        <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/toolBar"
            android:layout_marginTop="20dp"
            android:background="#EDEDED"
            app:themeBackground="#1E1E28" />


        <RelativeLayout
            android:id="@+id/group_detail_planet_toggle"
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/detail_planet_hide_planet_title"
                android:textColor="#000"
                android:textSize="14dp"
                app:themeTextColor="#FFF" />

            <io.grabity.planetwallet.Widgets.ToggleButton
                android:id="@+id/toggle_detail_planet_hide"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />


            <io.grabity.planetwallet.Widgets.PlanetWalletViews.PWView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#EDEDED"
                app:themeBackground="#1E1E28" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_detail_planet_mnemonic_backup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight"
            android:layout_marginTop="20dp">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_detail_planet_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/detail_planet_backup_mnemonic_phrase_title"
                android:textColor="#000"
                android:textSize="14dp"
                app:themeTextColor="#FFF" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/text_detail_planet_text1"
                android:layout_alignParentRight="true"
                android:src="@drawable/image_arrow_right_blue"
                app:themeSrc="@drawable/image_arrow_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_detail_planet_privatekey_backup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listHeight">

            <io.grabity.planetwallet.Widgets.FontTextView
                android:id="@+id/text_detail_planet_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/detail_planet_backup_privatekey_title"
                android:textColor="#000"
                android:textSize="14dp"
                app:themeTextColor="#FFF" />

            <io.grabity.planetwallet.Widgets.StretchImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/text_detail_planet_text2"
                android:layout_alignParentRight="true"
                android:src="@drawable/image_arrow_right_blue"
                app:themeSrc="@drawable/image_arrow_right_gray" />

        </RelativeLayout>

    </LinearLayout>


</io.grabity.planetwallet.Widgets.PlanetWalletViews.PWRelativeLayout>