<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GlobalAttrDeclare">
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="PlanetView">
        <attr name="data" format="string" />
    </declare-styleable>


    <declare-styleable name="RoundButton">

        <attr name="cornerRadius" format="dimension" />
        <attr name="borderWidth" />

        <attr name="borderColorDisable" format="color" />
        <attr name="borderColorNormal" format="color" />
        <attr name="borderColorHighlight" format="color" />

        <attr name="backgroundColorDisable" format="color" />
        <attr name="backgroundColorNormal" format="color" />
        <attr name="backgroundColorHighlight" format="color" />

        <attr name="textColorDisable" format="color" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorHighlight" format="color" />

        <attr name="backgroundColorNormalGradientStart" format="color" />
        <attr name="backgroundColorNormalGradientEnd" format="color" />

    </declare-styleable>


    <declare-styleable name="ToolBar">

        <attr name="toolbarTitle" format="string" />
        <attr name="toolbarTitleColor" format="color" />
        <attr name="toolbarTitleIcon" format="reference" />

    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="tabBarIndicatorColor" format="color" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" />
        <attr name="borderColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DotView">

        <attr name="dotColor" format="color" />

    </declare-styleable>

    <declare-styleable name="ShadowView">
        <attr name="start" format="color" />
        <attr name="end" format="color" />
        <attr name="direction">
            <flag name="TOP_BOTTOM" value="1" />
            <flag name="TR_BL" value="2" />
            <flag name="BR_TL" value="3" />
            <flag name="BOTTOM_TOP" value="4" />
            <flag name="BL_TR" value="5" />
            <flag name="LEFT_RIGHT" value="6" />
            <flag name="TL_BR" value="7" />
        </attr>

    </declare-styleable>

</resources>
