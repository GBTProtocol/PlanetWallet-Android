<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GlobalAttrDeclare">

        <attr name="themeBackground" format="reference|color" />
        <attr name="themeSrc" format="reference|color" />

        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="backgroundColor" format="color" />

        <attr name="defaultTheme">
            <enum name="NoTheme" value="0" />
            <enum name="Dark" value="1" />
            <enum name="Light" value="2" />
        </attr>

        <attr name="data" format="string" />

    </declare-styleable>

    <declare-styleable name="PlanetView">
        <attr name="data" />
    </declare-styleable>


    <declare-styleable name="RoundButton">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />

        <attr name="borderColorDisable" format="color" />
        <attr name="borderColorNormal" format="color" />
        <attr name="borderColorHighlight" format="color" />

        <attr name="backgroundColorDisable" format="color" />
        <attr name="backgroundColorNormal" format="color" />
        <attr name="backgroundColorHighlight" format="color" />

        <attr name="textColorDisable" format="color" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorHighlight" format="color" />

        <attr name="backgroundColorNormalGradientStart" format="color" />
        <attr name="backgroundColorNormalGradientEnd" format="color" />

        <attr name="buttonType">
            <flag name="A" value="1" />
            <flag name="B" value="2" />
            <flag name="C" value="3" />
        </attr>

        <attr name="defaultTheme" />

    </declare-styleable>


    <declare-styleable name="ToolBar">

        <attr name="toolbarTitle" format="string" />
        <attr name="toolbarBottomWidth" format="dimension" />

        <attr name="defaultTheme" />

        <attr name="blackThemeLeftSrc" format="reference|color" />
        <attr name="blackThemeRightSrc" format="reference|color" />
        <attr name="whiteThemeLeftSrc" format="reference|color" />
        <attr name="whiteThemeRightSrc" format="reference|color" />

    </declare-styleable>

    <declare-styleable name="TabBar">
        <attr name="tabBarIndicatorColor" format="color" />
        <attr name="defaultTheme" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="themeSrc" />
    </declare-styleable>

    <declare-styleable name="DotView">

        <attr name="dotColor" format="color" />

    </declare-styleable>

    <declare-styleable name="ShadowView">
        <attr name="start" format="color" />
        <attr name="end" format="color" />
        <attr name="direction">
            <flag name="TOP_BOTTOM" value="0x0001" />
            <flag name="TR_BL" value="0x0002" />
            <flag name="BR_TL" value="0x0003" />
            <flag name="BOTTOM_TOP" value="0x0004" />
            <flag name="BL_TR" value="0x0005" />
            <flag name="LEFT_RIGHT" value="0x0006" />
            <flag name="TL_BR" value="0x0007" />
        </attr>

    </declare-styleable>

    <declare-styleable name="RoundRelativeLayout">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="backgroundColor" />

    </declare-styleable>

    <declare-styleable name="RoundEditText">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="focusBorderColor" format="color" />
        <attr name="backgroundColor" />

        <attr name="defaultTheme" />

    </declare-styleable>

    <declare-styleable name="SlideDrawerLayout">
        <attr name="position">
            <enum name="main" value="-1" />
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="BarcodeView">

        <attr name="cornerRadius" />
        <attr name="borderWidth" />
        <attr name="borderColor" />
        <attr name="data" />

    </declare-styleable>

    <declare-styleable name="FontTextView">

        <attr name="themeTextColor" format="color" />
        <attr name="typefaceStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="medium" value="5" />
            <enum name="semibold" value="6" />
        </attr>

        <attr name="defaultTheme" />

    </declare-styleable>

    <declare-styleable name="PWRelativeLayout">

        <attr name="themeBackground" />
        <attr name="cornerRadius" />
        <attr name="cornerRound">
            <flag name="LT" value="0x1000" />
            <flag name="RT" value="0x0100" />
            <flag name="RB" value="0x0010" />
            <flag name="LB" value="0x0001" />
        </attr>

    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="defaultTheme" />
    </declare-styleable>


</resources>